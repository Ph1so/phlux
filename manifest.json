{
  "manifest_version": 3,
  "name": "phlux",
  "version": "1.2.0",
  "description": "Check for new internships from all your favorite companies with a single click.",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.jpeg", "icons/icon48.jpeg", "icons/icon128.jpeg"],
      "matches": ["<all_urls>"]
    }
  ]
}
